<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ank30.audiovisualiser.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/visualizerViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btntoggelRec"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight"
            android:layout_weight="1"
            android:background="@color/buttonBackColor1"
            android:text="Record"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlayRec"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight"
            android:layout_weight="1"
            android:background="@color/buttonBackColor2"
            android:text="Play"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
